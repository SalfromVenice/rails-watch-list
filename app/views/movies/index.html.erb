<h1>Select a movie</h1>
<div class="container col-6">
  <% @movies.each do |m| %>
    <div class='col-4'>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= m['poster_url'] %>)">
        <p><%= m['title'] %></p>
      </div>
      <p class="scroll card-p"><%= m['overview'] %></p>
    </div>
  <% end %>
</div>
<br>
<%= link_to '< Back', lists_path, class: "btn btn-outline-primary" %>
