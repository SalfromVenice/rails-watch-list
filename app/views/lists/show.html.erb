<h1><%= @list.name %></h1>
<br>
<div class="container bg-light d-flex">
  <div class="row">
    <% @list.bookmarks.each do |bm| %>
      <div class='col-4'>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= bm.movie.poster_url %>')">
          <h4><%= bm.movie.title %></h4><h5>rated: <%= bm.movie.rating %></h5>
          <%= link_to raw('<i class="far fa-trash-alt"></i>'), bookmark_path(bm), method: :delete, data: { confirm: "Remove #{bm.movie.title}?" }, class: 'btn btn-danger btn-sm' %>
          <%= bm.comment %>
        </div>
        <p><%= bm.movie.overview %></p>
      </div>
    <% end %>
  </div>
  <div class="col-3 bg-light">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.button :submit, '+ Add a bookmark', class: 'btn btn-primary btn-sm' %>
    <% end %>
  </div>
</div>
<br>
<%= link_to '< Back', lists_path, class: "btn btn-outline-primary" %>
